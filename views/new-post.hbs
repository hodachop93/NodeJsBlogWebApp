{{#section 'head'}}
<title>New post</title>
{{/section}}

{{> navbar}}

<div class="light-box">
  <div class="container">
    <h1 class="title">Create a new post</h1>
    <div class="line"></div>

    <form action="" class="form-horizontal" method="POST" enctype="multipart/form-data" id="new-post">
      <div class="form-group">
        <label for="title" class="control-label col-sm-2">Title</label>
        <div class="col-sm-6">
          <input type="text" class="form-control" name="title" placeholder="Title">
        </div>
      </div>
      <div class="form-group">
        <label for="teaser" class="control-label col-sm-2">Teaser</label>
        <div class="col-sm-6">
          <input type="text" class="form-control" name="teaser" placeholder="Teaser">
        </div>
      </div>
      <div class="form-group">
        <label for="picture" class="control-label col-sm-2">Picture</label>
        <div class="col-sm-6">
          <input type="file" class="form-control" name="picture" accept="image/*">
        </div>
      </div>
      <div class="form-group">
        <label for="Content" class="control-label col-sm-2">Content</label>
        <div class="col-sm-6">
          <textarea class="form-control content-editor" name="content" placeholder="Content"></textarea>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-6 col-sm-offset-2">
          <input type="submit" class="btn btn-primary" value="Submit">
        </div>
      </div>
    </form>
  </div>
</div>



{{#section 'script'}}
<script src="/tinymce/tinymce.min.js"></script>
<script src="/js/main.js"></script>
{{/section}}
