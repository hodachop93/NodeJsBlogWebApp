<div class="container">

  <div class="login-form">
    <div class="card">
      <h1 class="title">Login</h1>
      <form action="/login" method="POST">
        <div class="input-container">
          <input type="text" id="Username" required="required" placeholder="Username" name="username">

        </div>
        <div class="input-container">
          <input type="password" id="Password" required="required" placeholder="Password" name="password">

        </div>
        <div class="button-container text-center">
          <button type="submit"><span>Login</span></button>
          <button type="button"><a href="/register">Register</a></button>
        </div>
      </form>
    </div>

    <div class="card alt">
      <span class="fa-stack fa-5x">
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
      </span>

    </div>
  </div>
</div>